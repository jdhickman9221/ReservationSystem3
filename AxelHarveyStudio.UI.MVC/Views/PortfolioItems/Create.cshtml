@model AxelHarveyStudio.DATA.EF.PortfolioItem

@{
    ViewBag.Title = "Create Portfolio Item";
}
<br /><br />
<br /><br />
<br /><br />
<h2 class="text-center">@ViewBag.Title</h2>


@using (Html.BeginForm("Create", "PortfolioItems", FormMethod.Post, new { enctype = "multipart/form-data" } ))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        <div class="form-group text-center">
            @*@Html.LabelFor(model => model.JobName, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-6 offset-3 text-center" style="padding-bottom: 3rem;">
                @Html.EditorFor(model => model.JobName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Item / Project Name" } })
                @Html.ValidationMessageFor(model => model.JobName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @*@Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-6 offset-3 text-center" style="padding-bottom: 3rem;">
                @*@Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control", @placeholder = "" } })*@
                <input  type="file" name="Photo"  />
                @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @*@Html.LabelFor(model => model.JobDescription, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-6 offset-3 text-center" style="padding-bottom: 3rem;">
                @Html.EditorFor(model => model.JobDescription, new { htmlAttributes = new { @class = "form-control", @placeholder = "Item Description", @rows = "5" } })
                @Html.ValidationMessageFor(model => model.JobDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @*@Html.LabelFor(model => model.JobReview, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-6 offset-3 text-center" style="padding-bottom: 3rem;">
                @Html.EditorFor(model => model.JobReview, new { htmlAttributes = new { @class = "form-control", @placeholder = "Testimonial", @rows = "5" } })
                @Html.ValidationMessageFor(model => model.JobReview, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @*@Html.LabelFor(model => model.ProjectLink, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-6 offset-3 text-center" style="padding-bottom: 3rem;">
                @Html.EditorFor(model => model.ProjectLink, new { htmlAttributes = new { @class = "form-control", @placeholder = "Link to Project" } })
                @Html.ValidationMessageFor(model => model.ProjectLink, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            <div class="text-center">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<div class="text-center">
    @Html.ActionLink("Cancel", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

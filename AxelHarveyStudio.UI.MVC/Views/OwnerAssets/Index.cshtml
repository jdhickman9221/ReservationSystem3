@model IEnumerable<AxelHarveyStudio.DATA.EF.OwnerAsset>

@{
    ViewBag.Title = "Your Sessions";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add Booking", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserDetail.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssetPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OwnerNotes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeNotes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Review)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserDetail.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssetName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssetPhoto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerNotes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeNotes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>
        <td>
            <p>(Wait until your session completion if you'd like to leave a review of our services. To Add go back and Edit.)</p>
            @Html.DisplayFor(modelItem => item.Review)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.OwnerAssetID })
            @Html.ActionLink("Details", "Details", new { id = item.OwnerAssetID })

            @if (Request.IsAuthenticated && User.IsInRole("Admin")
            {
            @Html.ActionLink("Delete", "Delete", new { id = item.OwnerAssetID })
            }

        </td>
    </tr>
}

</table>
